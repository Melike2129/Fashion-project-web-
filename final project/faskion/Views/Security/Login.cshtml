
@model faskion.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div id="login">
        <h3 style ="margin: 15% 0% 0% 28%; background-color: #C8A2C8; width: 650px; border: 7px solid purple; border-radius: 25px " class="text-center text-white pt-5">Login form</h3>
        <div style ="margin: 0% 10% 10% 28%; font-size:20px; background-color: #C8A2C8; width: 550px; height: 200px; padding: 50px; border: 7px solid purple; border-radius: 25px " class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        @ViewBag.Message
                        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                        {
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Username)
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                <label for="remember-me" class="text-info">
                                    <span>Remember me</span>&nbsp;<span>
                                        <input id="remember-me" name="remember-me"
                                               type="checkbox">
                                    </span>
                                </label><br>
                                <button style="border-width: 7px;cursor: pointer; border-radius: 2rem; border-color: rgb(173, 114, 190); " type="submit" name="submit" class="btn btn-info btn-md">Login</button>
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="../Users/Create" class="text-info">Register here</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

